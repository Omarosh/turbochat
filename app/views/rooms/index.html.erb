<div id="chatroom_container" class="row bg-dark text-light">
 

  <div id="room_container"
  class="col-md-12 col-sm-12 bg-dark text-light">
    <% if @single_room %>

      <div id="single_room">
      
        <h3 class="text-center text-primary"> Chat</h3>
        <%= turbo_stream_from @single_room %>
        <h4 id="messages" data-controller="scroll">
          <%= render @messages %>
        </h4>
        <%= render 'layouts/new_message_form' %>
        
      </div>
    <% end %>
  </div>
</div>